<%- include("partial/header.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Style sheets -->
    <link rel="stylesheet" href="styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=Playwrite+CO:wght@100..400&display=swap" rel="stylesheet">
    
    <title>My Blog</title>
</head>
<body>
    <div class="intro">
        <h1 class="home-title"><i class="fas fa-globe-asia"></i>  Spread your Words to the World</h1>
    </div>
    <div class="container">
        <% for(let i = authorNames.length-1; i>=0; i--) { %>
            <form method="POST">
                <label hidden name="postid" id="postid"><%= postId[i] %></label>
                <h2 style="text-align: center;"><%= postTitles[i] %></h2>
                <h3 style="text-align: center; font-size: 20px;"><em><%= postSubtitles[i] %></em></h3>
                <br>
                <h4 style="text-align: end; font-size: 25px;"><%=  authorNames[i] %>, <span class="italics"><%= authorEmail[i] %></span></h4>
                <br><br>
                
                <p style="text-align: left;"><%= postContent[i] %></p>
                <br>
                <br>
                <a href="/update/<%= postId[i] %>" class="btn btn-info" >Update Post</a>  <a href="/delete/<%= postId[i] %>" class="btn btn-danger">Delete Post</a>
                <br><br>
                <hr>
            </form>
            
        <% } %>    
    </div>
    <br><br><br>
    <%- include("partial/footer.ejs") %>
</body>
</html>